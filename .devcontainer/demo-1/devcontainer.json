{
	"name": "1 - Spacesuits dev container",
	"image": "node:22",

	// Additional features
	"features": {
		"ghcr.io/devcontainers-extra/features/angular-cli:2": {
			"version": "19.2.1"
		}
	},

	// Init & config
	"postCreateCommand": {
		"InstallDeps": "cd front/spacesuit-status-front && npm i"
	},
	"forwardPorts": [ 4200 ],
	"portsAttributes": {
		"4200": {
			"label": "Angular",
			"protocol": "http"
		}
	},

	// IDE customizations
	"customizations": {
	  "vscode": {
		"settings": {
		  "editor.tabSize": 2
		},
		"extensions": [
		  "Angular.ng-template"
		]
	  }
	}
}